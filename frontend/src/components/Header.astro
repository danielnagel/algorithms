---
import { Image } from "astro:assets";
import me from "../assets/me_head_sticker.png";
---

<header class="header-outer-container">
  <div class="header-inner-container">
    <a href="/" class="link-container">
      <Image width="80" height="80" class="head" src={me} alt="my head"></Image>
    </a>
    <nav class="navigation">
      <a href="/" class="link-container">
        <div class="button">Home</div>
      </a>
    </nav>
  </div>
</header>

<style>
  .header-outer-container {
    width: 100%;
    border-bottom: 2px solid var(--secondary, #fff);
    box-shadow: 0px 1px 4px var(--accent-secondary, #000);
    background-color: var(--primary, #000);
    position: fixed;
  }
  .header-inner-container {
    max-height: 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: auto;
  }
  @media screen and (max-width: 1350px) {
		.header-inner-container {
		  padding: 0 10%;
		}
	}
  .head {
    width: 80px;
    height: 80px;
    margin-top: 30px;
  }
  .navigation {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .button {
    margin-top: -4px;
    margin-left: -4px;
    padding: 5px 20px;
    font-size: 16px;
    cursor: pointer;
    color: var(--accent-secondary, #000);
    background-color: var(--secondary, #fff);
    border: solid 2px var(--accent-secondary, #000);
    box-shadow: 4px 5px 0px var(--accent-secondary, #000);
  }
  .button:hover, .button:active {
    background-color: var(--accent, #000);
    transform: translate(4px, 4px);
    transition: 0.1s;
    box-shadow: 0px 0px 0px;
  }
  .link-container {
    position: relative;
  }
</style>
