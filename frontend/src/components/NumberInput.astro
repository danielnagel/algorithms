---
interface Props {
  label: string;
  id?: string;
  min?: string;
  max?: string;
}

const { label, id, min, max } = Astro.props;
---

<div class="input-container">
  <label for="number-input">{label}</label>
  <input id={id} class="number-input" name="number-input" type="number" min={min} max={max} />
</div>

<style>
  .input-container {
    display: flex;
    flex-direction: column;
    width: 100px;
    margin-top: -8px;
  }
  .input-container label {
    font-size: 16px;
    font-weight: bold;
    color: var(--secondary, #fff);
  }

  .number-input {
    padding: 1px 6px;
    box-sizing: border-box;
    background-color: var(--secondary, #fff);
    color: var(--accent-secondary, #000);
    font-size: 16px;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-weight: bold;
    border: solid 2px var(--accent-secondary, #000);
    box-shadow: 4px 5px 0px var(--accent-secondary, #000);
    -webkit-transition: 0.3s;
    transition: 0.3s;
    outline: none;
    font-size: 16px;
  }
</style>
