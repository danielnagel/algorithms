{
  "name": "algorithms",
  "version": "0.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build && cd .. && mkdir -p backend/build/frontend && cp -r frontend/dist/* backend/build/frontend",
    "clean": "rm -rf backend/build && rm -rf backend/node_modules && rm -rf frontend/dist && rm -rf frontend/node_modules",
    "dev": "cd frontend && npm run dev -- --host",
    "install:backend": "cd backend && npm i",
    "install:frontend": "cd frontend && npm i",
    "postinstall": "npm run install:backend && npm run install:frontend",
    "serve": "node backend/build/index.js",
    "start": "npm run build && npm run serve",
    "disable:telemetry": "cd frontend && npm run disable:telemetry",
    "lint": "eslint . --ignore-pattern \"backend/build/\"",
    "lint:fix": "eslint --fix . --ignore-pattern \"backend/build/\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielnagel/dnagel.de.git"
  },
  "author": "d.nagel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielnagel/dnagel.de/issues"
  },
  "homepage": "https://github.com/danielnagel/dnagel.de#readme",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^9.6.0",
    "eslint-plugin-astro": "^1.2.3",
    "globals": "^15.8.0",
    "typescript-eslint": "^7.16.0"
  }
}
