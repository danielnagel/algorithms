---
import {
	Image 
} from 'astro:assets';
import mailSvg from '../assets/mail-white.svg';
import githubSvg from '../assets/github-white.svg';
import linkedInSvg from '../assets/linkedin-white.svg';
---

<footer class="footer">
	<div class="footer-container">
		<a href="https://dnagel.de/imprint">Imprint & Privacy Policy</a>
		<address class="address">
			<a href="https://github.com/danielnagel"><Image alt="github" src={githubSvg} width={24} height={24}></Image></a>
			<a href="https://www.linkedin.com/in/daniel-nagel-0550b9193/"><Image alt="linkedin" src={linkedInSvg} width={32} height={32}></Image></a>
			<a href="mailto:mail@dnagel.de"><Image alt="mail" src={mailSvg} width={32} height={32}></Image></a>
		</address>
	</div>
</footer>

<style>
  .address {
    padding-top: 5px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
  }

  .footer {
    border-top: 2px var(--secondary, #fff) solid;
  }

  .footer-container {
    padding: 20px 20% 20px 20%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  @media screen and (max-width: 900px) {
    .footer-container {
      padding: 30px;
      gap: 20px;
    }
  }
</style>
